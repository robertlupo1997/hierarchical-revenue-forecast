# MLRF Environment Variables

# ===================
# API Configuration
# ===================
PORT=8081                              # API server port
API_KEY=                               # Optional: Set to enable authentication

# ===================
# Model & Data Paths
# ===================
MODEL_PATH=models/lightgbm_model.onnx  # Path to ONNX model
FEATURE_PATH=data/features/feature_matrix.parquet
INTERVALS_PATH=models/prediction_intervals.json
SHAP_DATA_PATH=models/shap_data.json
HIERARCHY_DATA_PATH=models/hierarchy_data.json
ONNX_LIB_PATH=/usr/lib                 # ONNX Runtime library path

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://localhost:6379       # Redis connection URL

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_RPS=100                     # Requests per second limit
RATE_LIMIT_BURST=200                   # Burst allowance

# ===================
# CORS Configuration
# ===================
CORS_ORIGINS=http://localhost:3000     # Comma-separated allowed origins

# ===================
# Observability
# ===================
OTEL_ENABLED=true                      # Enable OpenTelemetry tracing
OTEL_EXPORTER_OTLP_ENDPOINT=jaeger:4318
OTEL_SERVICE_NAME=mlrf-api
ENVIRONMENT=development                # development | staging | production

# ===================
# Dashboard (Vite)
# ===================
VITE_API_URL=http://localhost:8081     # API base URL for dashboard
VITE_API_KEY=                          # Optional: API key for dashboard
